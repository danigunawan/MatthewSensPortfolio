<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content="<%= @seo_keywords %>"/>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">

          <%= video_tag(
              'AbstractBokehPan.mp4',
              id: 'background',
              autoplay: true,
              loop: true,
              muted: true,
              poster: 'portfolio-background.jpg'
            )
            %>

          <!-- <div id="background"></div> -->

          <%= render "shared/application_nav" %>

          <%= yield %>

          <%= render "pages/about_me" %>

          <%= render "shared/application_footer" %>
          <!-- this alerts method is inside application_helper -->
          <%= alerts %>

          <%= source_helper("application") %>

        </div>
      </div>
    </div>
  </body>
</html>
