<!-- Partial rendered from new.html.erb -->

<%= form_for(@portfolio_item) do |form| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>
      <div class="form-group">
        <%= form.file_field :thumb_image %>
      </div>

    </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, autofocus: true, class: 'form-control', rows: 5 %>
    </div>
  </div>
</div>

  <hr>

  <div class="col-md-12">
    <h2>Technologies Used</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>
    </div>
  </div>

  <div>
    <%= link_to_add_association 'Add Technology', form, :technologies %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Portfolio Item', class: "btn btn-lg btn-primary btn-block" %>
    <hr>
    <%= link_to "View All Portfolio Items", portfolios_path, class: "btn btn-lg btn-secondary btn-block" %>
  </div>
<% end %>
