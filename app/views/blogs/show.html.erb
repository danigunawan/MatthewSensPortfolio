<p>
  <strong>Title:</strong>
  <%= @blog.title %>

</p>

<p>
  <strong>Body:</strong>
  <%= @blog.body %>
</p>

<%= link_to_if(logged_in?(:site_admin), 'Edit', edit_blog_path(@blog), class: "btn btn-success" ) %>

<%= render 'comments/comment_form' %>

<!-- Start of comments -->
<div id="comments" data-blog-id="<%= @blog.id %>">
  <%= render @blog.comments %>
</div>
<!-- End of comments -->
