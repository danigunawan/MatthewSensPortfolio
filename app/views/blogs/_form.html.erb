<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Matthew Israelson Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, autofocus: true, class: 'form-control', rows: 5 %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
