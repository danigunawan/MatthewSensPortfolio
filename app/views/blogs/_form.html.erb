<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :topic_id %>
    <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                               {
                                 include_blank: true
                               },
                               class: 'form-control'
                              )
    %>
  </div>

  <div class="form-group">
    <%= form.radio_button :status, 'draft' %>
    <%= form.label :status, 'Draft' %>

    <%= form.radio_button :status, 'published' %>
    <%= form.label :status, 'Published' %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, autofocus: true, class: 'form-control', rows: 5 %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
